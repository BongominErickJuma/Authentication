<%- include("partials/header.ejs") %>
<div
  class="signup-box d-flex flex-column align-items-center mx-auto mt-4 py-2 rounded-5 shadow-sm border rounded"
>
  <h2 class="h2 fw-light mb-3">Sign Up</h2>

  <% if (errorMessages.length > 0) { %>
  <div id="error-message">
    <p class="text-danger"><%= errorMessages %></p>
  </div>
  <% } %>
  <form method="post" action="/signup">
    <div class="user-box">
      <input type="text" name="username" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-person-fill me-2"></i> Username</label
      >
    </div>
    <div class="user-box">
      <input type="email" name="email" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-envelope-fill me-2"></i> Email</label
      >
    </div>
    <div class="user-box">
      <input type="text" name="phone" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-telephone-fill me-2"></i> Phone</label
      >
    </div>
    <div class="user-box">
      <input type="password" name="password" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-key-fill me-2"></i> Password</label
      >
    </div>
    <div class="user-box">
      <input type="password" name="confirmPassword" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-person-check-fill me-2"></i> Confirm Password</label
      >
    </div>
    <button class="btn btn-secondary w-100">submit</button>
  </form>
  <p class="fw-light mt-2 position-absolute bottom-0">
    Don't have account?,
    <a href="/" class="text-decoration-none text-body-primary hide-signup"
      >Sign in</a
    >
  </p>
</div>

<script>
  setTimeout(function () {
    var errorMessageDiv = document.getElementById("error-message");
    if (errorMessageDiv) {
      errorMessages = "";
      errorMessageDiv.querySelector("p").textContent = "";
      errorMessageDiv.style.display = "none";
    }
  }, 3000);
</script>
<%- include("partials/footer.ejs") %>
