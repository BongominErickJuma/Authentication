<%- include("partials/header.ejs") %>
<div
  class="login-box d-flex flex-column align-items-center mx-auto mt-4 py-2 border rounded-5 shadow-sm"
>
  <h2 class="h2 fw-light mb-5">Sign In</h2>

  <% if (errorMessages.length > 0) { %>
  <div id="error-message">
    <p class="text-danger"><%= errorMessages %></p>
  </div>
  <% } %>

  <form class="mt-5" method="post" action="/login">
    <div class="user-box">
      <input type="email" name="username" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-person-fill me-2"></i>Email</label
      >
    </div>
    <div class="user-box">
      <input type="password" name="password" required />
      <label class="d-flex align-items-center"
        ><i class="bi bi-key-fill me-2"></i> Password</label
      >
    </div>
    <button class="btn btn-secondary w-100 mt-2">Submit</button>
  </form>
  <p class="fw-light mt-2 position-absolute bottom-0">
    Don't have an account?,
    <a href="/signup" class="text-decoration-none text-body-primary">Sign up</a>
  </p>
</div>

<script>
  setTimeout(function () {
    var errorMessageDiv = document.getElementById("error-message");
    if (errorMessageDiv) {
      errorMessages = "";
      errorMessageDiv.querySelector("p").textContent = "";
      errorMessageDiv.style.display = "none";
    }
  }, 3000);
</script>

